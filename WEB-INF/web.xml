<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5">

   <servlet>
     <description>Receives a completed survey</description>
     <servlet-name>submitFormResponse</servlet-name>
     <servlet-class>applab.surveys.server.ProcessSubmission</servlet-class>
   </servlet>
   <servlet>
     <description>Lists all of the available survey forms</description>
     <servlet-name>getFormList</servlet-name>
     <servlet-class>applab.surveys.server.formList</servlet-class>
   </servlet>
   <servlet>
     <description>Returns the requested survey form to the mobile client</description>
     <servlet-name>getForm</servlet-name>
     <servlet-class>applab.surveys.server.GetForm</servlet-class>
   </servlet>
   <servlet>
     <servlet-name>getSub</servlet-name>
     <servlet-class>getSubmissions</servlet-class>
   </servlet>
   <servlet>
     <servlet-name>processSub</servlet-name>
     <servlet-class>processSubmissions</servlet-class>
   </servlet>
   <servlet>
     <servlet-name>GetDesignerForm</servlet-name>
     <servlet-class>applab.surveys.server.GetDesignerForm</servlet-class>
   </servlet>
   <servlet>
     <servlet-name>saveXform</servlet-name>
     <servlet-class>applab.surveys.server.saveXform</servlet-class>
   </servlet>
   <servlet>
     <description>Allows callers to perform a remote select call</description>
     <servlet-name>Select</servlet-name>
     <servlet-class>applab.surveys.server.Select</servlet-class>
   </servlet>
   
   <servlet-mapping>
     <servlet-name>submitFormResponse</servlet-name>
     <url-pattern>/submission</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
     <servlet-name>getFormList</servlet-name>
     <url-pattern>/formList</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
     <servlet-name>getForm</servlet-name>
     <url-pattern>/getForm</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
     <servlet-name>getSub</servlet-name>
     <url-pattern>/getSubmissions</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
     <servlet-name>processSub</servlet-name>
     <url-pattern>/processSubmissions</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
     <servlet-name>GetDesignerForm</servlet-name>
     <url-pattern>/getXform</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
     <servlet-name>saveXform</servlet-name>
     <url-pattern>/saveXform</url-pattern>
   </servlet-mapping>
   <servlet-mapping>
     <servlet-name>Select</servlet-name>
     <url-pattern>/select</url-pattern>
   </servlet-mapping>
 </web-app>
